{
  "env": {
    "es6":true,
    "browser": true,
    "commonjs": true,
    "node": true,
    "jest": true
  },
  "extends": ["prettier", "airbnb-base", "eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
	"comma-dangle": 0,
    "no-plusplus": "off"
  },
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  }
}
